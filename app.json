{
  "expo": {
    "name": "Flashly",
    "slug": "Flashly",
    "scheme": "Flashly",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/epl.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.johnayodeji.Flashly"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/splash.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.johnayodeji.Flashly"
    },
    "web": {
      "favicon": "./assets/epl.png"
    },
    "plugins": [
      "expo-router",
      "expo-font"
    ]
  }
}
